generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  admin
  user
}

model user {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          role
}


model baby {
  id                    String          @id @default(cuid())
  name                  String
  gender                String
  birthdate             DateTime
  parent_name           String
  address               String
  phone_number          String?
  status                String?
  age                   Int?
  baby_condition        baby_condition[]
}

model baby_condition {
  id                String    @id @default(cuid())
  baby              baby      @relation(fields: [baby_id], references: [id])
  baby_id           String
  month             Int
  weight            Float
  height            Float?
  scores            Float?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
}
