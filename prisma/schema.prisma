generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model user {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  phone_number  String?   @unique
  role          Role      @default(ADMIN)
  babies        baby[]
}

model baby {
  id                    String           @id @default(cuid())
  name                  String
  gender                Gender
  birthdate             DateTime
  address               String?
  statusBBperU          StatusBBperU?
  statustBperU          StatustBperU?
  user                  user             @relation(fields: [user_id], references: [id])
  user_id               String
  baby_condition        baby_condition[]
}

model baby_condition {
  id                String    @id @default(cuid())
  baby              baby      @relation(fields: [baby_id], references: [id])
  baby_id           String
  month             Month
  weight            Float
  height            Float?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
}

enum Gender {
  MALE
  FEMALE
}

enum Month {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}

enum Role {
  ADMIN
  USER
}

enum StatusBBperU {
  SEVERELY_UNDERWEIGHT
  UNDERWEIGHT
  NORMAL
  OVERWEIGHT
  SEVERELY_OVERWEIGHT
}

enum StatustBperU {
  SEVERELY_STUNTED
  STUNTED
  NORMAL
  OVERHEIGHT
  SEVERELY_OVERHEIGHT
}
